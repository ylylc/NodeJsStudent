<%- include header %>
<form class="form-horizontal"  role='form' action='/reg' method='post'>
	<fieldset>
	<legend>用户注册</legend>
	<div class="form-group">
			<label class='col-sm-2 control-label' for='username'>用户名</label>
			<input type='text' class='input-xlarge' id='username' name='username' placeholder='请输入账户名称'>
			    <p class='help-black'>你的账户名称,用于登录和显示</p>
	</div>
	<div class='form-group'>
		   <label class='col-sm-2 control-label' for='password'>密码</label>
		   <input type='password' class='input-xlarge' id='password' name='password' placeholder='请输入密码'>
	</div>
	<div class='form-group'>
		   <label  class='col-sm-2 control-label' for='password-repeat'>重复输入密码</label>
		   <input type='password' class='input-xlarge' id='password-repeat' name='password-repeat' placeholder='请重新输入密码'>
	</div>
			
   <div class="form-actions">
    <div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-primary">注册</button>
    </div>
  </div>

   </fieldset>
</form>
 <%- include footer%>